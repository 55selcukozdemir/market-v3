<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.stockstatus.StockStatusFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TabLayout.Colored"
        app:tabTextColor="@color/white"
        app:tabMode="scrollable">
    </com.google.android.material.tabs.TabLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:gravity="right"
        android:orientation="horizontal">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10">
            <androidx.viewpager.widget.ViewPager
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



            </androidx.viewpager.widget.ViewPager>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.6"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/zero"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:background="@drawable/off_click"
                android:text="0"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/one"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:background="@drawable/on_click"
                android:insetTop="3dp"
                android:insetBottom="3dp"
                android:text="1"
                android:textColor="@color/white"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/two"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:background="@drawable/off_click"
                android:insetTop="3dp"
                android:insetBottom="3dp"
                android:text="2"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/three"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:background="@drawable/off_click"
                android:insetTop="3dp"
                android:insetBottom="3dp"
                android:text="3"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/four"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:background="@drawable/off_click"
                android:insetTop="3dp"
                android:insetBottom="3dp"
                android:text="4"
                android:textColor="@color/white"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/five"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:background="@drawable/off_click"
                android:insetTop="3dp"
                android:insetBottom="3dp"
                android:text="5"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/six"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:background="@drawable/off_click"
                android:insetTop="3dp"
                android:insetBottom="3dp"
                android:text="6"
                android:textColor="@color/white"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/seven"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:background="@drawable/off_click"
                android:insetTop="3dp"
                android:insetBottom="3dp"
                android:text="7"
                android:textColor="@color/white"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/eight"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:background="@drawable/off_click"
                android:insetTop="3dp"
                android:insetBottom="3dp"
                android:text="8"
                android:textColor="@color/white"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nine"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:background="@drawable/off_click"
                android:insetTop="3dp"
                android:insetBottom="3dp"
                android:text="9"
                android:textColor="@color/white"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="vertical"
        android:layout_weight="2">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="5dp">

            <EditText
                android:id="@+id/speed_a_barcode"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_weight="10"
                android:background="@drawable/grey_stoke"
                android:inputType="numberSigned|number"
                android:textCursorDrawable="@color/red"/>

            <Button
                android:id="@+id/speed_a_scan"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="tara"
                android:textColor="@color/red"
                app:rippleColor="@color/red" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="15dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:layout_weight="10"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/speed_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/roboto"
                    android:textAlignment="viewStart"
                    android:textSize="16dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/speed_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textAlignment="viewStart"
                    android:text="Sipariş Özeti : 0.0"
                    android:textSize="14dp"
                    android:textColor="@color/black" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <Button
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/basket"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="4"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Sepet"
                android:textColor="@color/red"
                app:rippleColor="@color/red" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</LinearLayout>